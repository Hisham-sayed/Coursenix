@{
    Layout = "_Layout";
}

@section css {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/material-design-icons/3.0.1/iconfont/material-icons.min.css" rel="stylesheet" />
}

@if (!User.Identity.IsAuthenticated)
{
    <section class="cn-hero">
        <div class="cn-container">
            <div class="cn-hero-content">
                <h1>Your Journey to Excellence Starts Here!</h1>
                <h2 class="highlight">Join Coursenix Now</h2>
                <p>
                    Find, book, and manage your courses online with our easy-to-use platform.
                    Join thousands of students and teachers who are already enjoying the
                    benefits of Coursenix.
                </p>
                <a href="#cnPath" class="cn-btn cn-cta-btn">Join now &rarr;</a>
            </div>
            <div class="cn-hero-image">
                <div class="cn-hero-background">
                    <img src="~/assets/circular-background2.svg"
                         alt=""
                         class="cn-hero-bg-img" />
                </div>
                <div class="cn-image-stack">
                    @* *@
                    <div class="cn-student cn-student-left">
                        <img src="~/assets/student-left.svg"
                             alt="Student with books"
                             class="cn-pill cn-pill-1" />
                    </div>
                    <div class="cn-student cn-student-middle">
                        <img src="~/assets/student-middle.svg"
                             alt="Student with headphones"
                             class="cn-pill cn-pill-2" />
                    </div>
                    <div class="cn-student cn-student-right">
                        <img src="~/assets/student-right.svg"
                             alt="Student with notebooks"
                             class="cn-pill cn-pill-3" />
                    </div>
                </div>
            </div>
        </div>
        <img src="assets/decoration1.svg"
             alt=""
             class="cn-decoration cn-decoration-1" />
    </section>

    <section class="cn-path-selection" id="cnPath">
        <img src="~/assets/Arrow1.svg"
             alt=""
             class="cn-decoration cn-decoration-1" />
        <div class="cn-container">
            <h2 class="cn-section-title">Choose Your Path</h2>
            <p class="cn-section-description">
                Whether you're looking to learn or teach, we've got you covered
            </p>

            <div class="cn-paths">
                <div class="cn-path-card">
                    <div class="cn-path-icon">
                        <img src="~/assets/student.svg" alt="Student icon" />
                    </div>
                    <h3>Student</h3>
                    <p>
                        Find courses, access study materials, and manage your learning
                        schedule all in one place
                    </p>
                    <a href="@Url.Action("StudentRegister", "Account")" class="cn-btn cn-path-btn">Get started</a>
                </div>

                <div class="cn-path-card">
                    <div class="cn-path-icon">
                        <img src="~/assets/teacher.svg" alt="Teacher icon" />
                    </div>
                    <h3>Teacher</h3>
                    <p>
                        Offer your courses, manage class schedules, and track attendance with
                        our intuitive tools
                    </p>
                    <a href="@Url.Action("TeacherRegister", "Account")" class="cn-btn cn-path-btn">Get started</a>
                </div>
            </div>
        </div>
        <img src="~/assets/lamp.svg" alt="" class="cn-decoration cn-decoration-2" />
    </section>
}
else
{
    if (User.IsInRole("Student"))
    {
        @await Html.PartialAsync("_StudentLoggedin")
    }
    else if (User.IsInRole("Teacher"))
    {
        @await Html.PartialAsync("_TeacherLoggedin")
    }
    else
    {
		@await Html.PartialAsync("_Adminloggedin")
        @* Admin or other roles logic can go here if needed *@
    }
}
