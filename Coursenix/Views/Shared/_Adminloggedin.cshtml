<!-- Admin Welcome Section -->
<section id="adminSection" class="cn-welcome-section">
    <div class="container">
        <div class="cn-welcome-content">
            <h1>Welcome Back, @(User.FindFirst("FullName")?.Value)!</h1>
            <p>
                Glad to see you again! As an admin, you play a vital role in maintaining and optimizing the platform.
                Manage courses, oversee instructors and students, and ensure everything runs smoothly across the system.
            </p>
            <a href="@Url.Action("Create", "Course")" class="btn cn-courses-btn">Add New Course →</a>
        </div>
    </div>
</section>

<div class="section-divider"></div>

<section class="cn-path-selection" id="cnPath">
    <img src="~/assets/Arrow1.svg" alt="" class="cn-decoration cn-decoration-1" />
    <div class="cn-container">
        <h2 class="cn-section-title">Admin Control Panel</h2>
        <p class="cn-section-description">
            Stay in control by managing users, organizing content, and optimizing the learning environment.
        </p>
        <p class="cn-section-description">...</p>
        <div class="cn-paths">
            <div class="cn-path-card">
                <div class="cn-path-icon">
                    <img src="~/assets/admin-dashboard.svg" alt="Create Course icon" />
                </div>
                <h3>Manage Courses</h3>
                <p>
                    Create, update, and remove courses to ensure students have access to the most relevant and high-quality content.
                </p>
                <a href="@Url.Action("Create", "Course")" class="cn-create-course-btn">Add Course</a>
            </div>
            <div class="cn-path-card">
                <div class="cn-path-icon">
                    <img src="~/assets/users.svg" alt="Manage Users icon" />
                </div>
                <h3>Manage Users</h3>
                <p>
                    View and manage instructors and students, assign roles, and maintain an efficient user experience.
                </p>
                <a href="@Url.Action("Index", "UserManagement")" class="btn cn-courses-btn">Manage Users</a>
            </div>
        </div>
    </div>
    <img src="~/assets/lamp.svg" alt="" class="cn-decoration cn-decoration-2" />
</section>

<script src="~/js/profile-drop-down.js"></script>
