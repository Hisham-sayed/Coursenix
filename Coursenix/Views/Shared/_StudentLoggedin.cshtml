

<!-- Student Welcome Section -->
<section id="studentSection" class="cn-welcome-section">
    <div class="container">
        <div class="cn-welcome-content">
            <h1>Welcome Back, @(User.FindFirst("FullName")?.Value)!</h1>
            <p>We're excited to have you back! Your learning journey continues here. Explore our wide range of courses, connect with expert teachers, and take your education to the next level. Whether you're looking to enhance your skills or discover new subjects, we're here to support your growth.</p>
            <a href=@Url.Action("Index", "Course") class="cn-courses-btn">Explore Courses →</a>
        </div>
    </div>
</section>

<div class="cn-section-divider"></div>

<section class="cn-path-selection" id="cnPath">
    <img src="~/assets/Arrow1.svg" alt="" class="cn-decoration cn-decoration-1" />
    <div class="cn-container">
        <h2 class="cn-section-title">Explore Courses & My Groups</h2>
        <p class="cn-section-description">...</p>
        <div class="cn-paths">
            <div class="cn-path-card">
                <div class="cn-path-icon">
                    <img src="~/images/ExploreCourses.jpg" alt="Courses icon" />
                </div>
                <h3>Explore Courses</h3>
                <p>
                    Browse a wide range of courses, from beginner to advanced, and start learning at your own pace with expert guidance.
                </p>
                <a href="@Url.Action("Index", "Course")" class="cn-courses-btn">Browse Courses</a>
            </div>
            <div class="cn-path-card">
                <div class="cn-path-icon">
                    <img src="~/images/ViewGroups.jpg" alt="Groups icon" />
                </div>
                <h3>My Groups</h3>
                <p>
                    Join or manage study groups, collaborate with peers, and share resources to enhance your learning experience.
                </p>
                <a href="@Url.Action("Groups", "Student")" class="cn-create-course-btn">View Groups</a>
            </div>
        </div>
    </div>
    <img src="~/assets/lamp.svg" alt="" class="cn-decoration cn-decoration-2" />
</section>

